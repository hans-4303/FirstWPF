<Page x:Class="_WPF_01.ExpenseItHome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_WPF_01"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="500"
      Title="ExpenseIt - Home">

    <!-- 마진 값이 4개일 경우 좌 상 우 하로 지정됨 -->
    <!-- 이 마진 값은 xaml의 속성 중 레이아웃에서도 조정 가능함 -->
    <Grid Margin="10, 0, 10, 10">
        <!-- 행 및 열 정의 만들기 -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <!-- Height: Auto, 행 내용에 따라 행 크기가 자동으로 조절 -->
            <RowDefinition Height="Auto"/>
            <!-- 기본 Height: 사용 가능한 공간에 비례하여 행 높이가 결정되는 Star 크기 조정:
            예를 들어 행은 전체 두 개이고 Height가 각각 * 라면 각각 절반(1 / 행 개수) 공간 가짐 -->
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
    </Grid>
</Page>
